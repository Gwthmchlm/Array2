import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

import junit.framework.Assert;

public class JUnit2 {
	static WebDriver driver;
	@BeforeClass
	public static void launchBrowser() {
		System.setProperty("webdriver.chrome.driver", "E:\\Eclipse workspace\\JUnit\\drivers\\chromedriver.exe");
		ChromeOptions a = new ChromeOptions();
		ChromeOptions b = a.addArguments("--disable-notifications");
		driver = new ChromeDriver(b);
	}
	@Before
	public void startTime() {
		Date d = new Date();
		System.out.println(d);
	}
	@Test
	public void tc1() {
		driver.get("https://www.facebook.com/");
		Assert.assertTrue(condition);
		WebElement link = driver.findElement(By.id("u_0_b"));
		link.click();		
		WebElement user = driver.findElement(By.id("email"));
		user.sendKeys("9715465054");
